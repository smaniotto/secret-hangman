{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State",
  "type": "object",
  "required": [
    "player",
    "remaining_guesses",
    "winner",
    "word",
    "word_length",
    "word_reveal"
  ],
  "properties": {
    "player": {
      "$ref": "#/definitions/CanonicalAddr"
    },
    "remaining_guesses": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "winner": {
      "type": "boolean"
    },
    "word": {
      "type": "string"
    },
    "word_length": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "word_reveal": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LetterReveal"
      }
    }
  },
  "definitions": {
    "Binary": {
      "description": "Binary is a wrapper around Vec<u8> to add base64 de/serialization with serde. It also adds some helper methods to help encode inline.\n\nThis is only needed as serde-json-{core,wasm} has a horrible encoding for Vec<u8>",
      "type": "string"
    },
    "CanonicalAddr": {
      "$ref": "#/definitions/Binary"
    },
    "LetterReveal": {
      "type": "object",
      "required": [
        "letter",
        "position"
      ],
      "properties": {
        "letter": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "position": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        }
      }
    }
  }
}
